{
  "rules": {
    "block-no-empty": null,
    "color-named": "always-where-possible",
    "color-no-invalid-hex": true,
    "rule-empty-line-before": [
      "always",
      {
        "except": [
          "first-nested"
        ],
        "ignore": [
          "after-comment"
        ]
      }
    ],
    "unit-allowed-list": [
      "em",
      "rem",
      "%",
      "px"
    ]
  }
}
